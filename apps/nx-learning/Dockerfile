# Run the container with `docker run -p 3000:3000 -t nx-learning`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system nx-learning && \
          adduser --system -G nx-learning nx-learning

COPY dist/apps/nx-learning nx-learning/
RUN chown -R nx-learning:nx-learning .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix nx-learning --omit=dev -f install

CMD [ "node", "nx-learning" ]
